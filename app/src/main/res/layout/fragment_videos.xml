<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideosFragment"
    android:id="@+id/videos_layout">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/videoListFragment"
        android:layout_below="@+id/videoLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to play the video, long click to choose to play in app or add video into favorite list."
        android:id="@+id/videoLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#141854"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:textStyle="bold|italic" />
</RelativeLayout>
